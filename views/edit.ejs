
<%- include('layout/header')  %> 
<%- include('layout/nav')  %> 



<div class="container-fluid" style="padding-top: 5rem   ; min-height: 100vh;">
    <div class="d-flex align-items-center justify-content-between">
        <h1>Add New Car</h1>
    </div>
    <div class="form-wrapper">
      <form class="form p-3 ps-5" method="POST" action="/cars/<%= cars.id %>/edit?_method=PUT"  enctype="multipart/form-data">
        <div class="row my-3">
          <div class="col-2 mt-2 form-label">
            <label for="name" class="form-label">Nama</label>
          </div>
          <div class="col form-body">
            <div class="mb-3">
              <input type="text" class="form-control" id="name" name="name" aria-describedby="emailHelp" value="<%=cars.name%>">
            </div>
          </div>
        </div>
        <div class="row my-3">
          <div class="col-2 mt-2 form-label">
            <label for="exampleInputEmail1" class="form-label">Sewa Per Hari</label>
          </div>
          <div class="col form-body">
            <div class="mb-3">
              <input type="text" class="form-control" id="rent" name="rent" aria-describedby="emailHelp" value="<%=cars.rent%>">
              
            </div>
          </div>
        </div>
        <div class="row my-3">
          <div class="col-2 mt-2 form-label">
            <label for="exampleInputEmail1" class="form-label">Ukuran</label>
          </div>
          <div class="col form-body">
            <div class="mb-3">
              <select class="form-select " name="" id="">
                <option selected>Select one</option>
                <option value="">New Delhi</option>
                <option value="">Istanbul</option>
                <option value="">Jakarta</option>
              </select>
          </div>
        </div>
        </div>
        <div class="row my-3">
          <div class="col-2 mt-2 form-label">
            <label for="exampleInputEmail1" class="form-label">Foto</label>
          </div>
          <div class="col form-body">
            <div class="mb-3">
                <input type="file" name="img" id="img" style="display:none;"/>
                <label class="form-control" for="img"><% if (!cars.img.length < 0) { %>
                 No file choosen
                <% } %><%= cars.img %>
                <svg class="float-end" width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M15.75 11.25V14.25C15.75 14.6478 15.592 15.0294 15.3107 15.3107C15.0294 15.592 14.6478 15.75 14.25 15.75H3.75C3.35218 15.75 2.97064 15.592 2.68934 15.3107C2.40804 15.0294 2.25 14.6478 2.25 14.25V11.25" stroke="#8A8A8A" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M12.75 6L9 2.25L5.25 6" stroke="#8A8A8A" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M9 2.25V11.25" stroke="#8A8A8A" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                </label>
            </div>
          </div>
        </div>
      </div>

      <div class="d-inline" style="position: absolute; bottom:   0;">
        <button type="reset" class="btn btn-primary pt-2">Cancel</button>
        <button type="submit" class="btn btn-primary pt-2">Save</button>
    </div>
      </form>
</div>

<%- include('layout/footer')  %> 